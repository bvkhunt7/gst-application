<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views
  http://axelor.com/xml/ns/object-views/object-views_5.0.xsd">

  <grid name="address-grid" title="Address"
    model="com.axelor.gst.db.Address">
    <field name="type" />
    <field name="line1" />
    <field name="line2" />
    <field name="city" />
    <field name="state" />
    <field name="country" />
    <field name="pincode" />

   </grid>
   
   <form name="address-form" title="Address"
    model="com.axelor.gst.db.Address" >
   <panel colSpan="4">
   <field name="type" />
    <field name="line1" />
    <field name="line2" />
    <field name="pincode" />
     <field name="city"  form-view="city-form" canNew="true" />
     <field name="state"  form-view="state-form" canNew="true" />
     <field name="country" form-view="country-form" canNew="true" />
    </panel>
  
    </form>
    
    </object-views>
   