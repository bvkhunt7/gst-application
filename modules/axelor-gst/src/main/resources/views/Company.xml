<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views
  http://axelor.com/xml/ns/object-views/object-views_5.0.xsd">

	<grid name="company-grid" title="Company"
		model="com.axelor.gst.db.Company">
		<field name="name" />
		<field name="image" widget="image" />
		<field name="gstin" />
		<field name="contact" />

		<field name="address" />
		<field name="bankdetails" />

	</grid>

	<form name="company-form" title="Company"
		model="com.axelor.gst.db.Company">
		<panel colSpan="4">

			<field name="name" colSpan="4" />
			<field name="gstin" colSpan="4" />
			<field name="image" widget="image" />
			<field name="contact" colSpan="8">
				<editor>
					<field name="contact.name" colSpan="4" />
					<field name="contact.type" colSpan="4"
						selection="contact.type.selection" />
					<field name="contact.primaryemail" colSpan="4" />
					<field name="contact.secondaryemail" colSpan="4" />
					<field name="contact.primaryphone" colSpan="4" />
					<field name="contact.secondaryphone" colSpan="4" />

				</editor>

			</field>
			<field name="address" colSpan="4" form-view="address-form"
				canNew="true" />
			<field name="bankdetails" colSpan="8" />
		</panel>

		<!-- <panel-related field="bankdetails"> <field name="bankdetails.bank" 
			/> <field name="bankdetails.accountno" /> <field name="bankdetails.ifsc" 
			/> <field name="bankdetails.type" /> <field name="bankdetails.address" /> 
			</panel-related> <panel-related field="address"> <field name="address.type" 
			/> <field name="address.line1" /> <field name="address.line2" /> <field name="address.city" 
			/> <field name="address.state" /> <field name="address.country" /> <field 
			name="address.pincode" /> </panel-related> -->

	</form>

</object-views>
   